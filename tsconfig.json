{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    "noEmit": true, 
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@/*": ["*"] 
    },
    
    "sourceMap": true,
    "types": ["node"],
    "isolatedModules": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts", "src/**/*", "types"],
  "exclude": [
    "node_modules", 
    "dist", 
    "uploads", 
    "prisma",
    "src/types/api.gen.ts"
  ]
}