{
  "compilerOptions": {
    "module": "nodenext", 
    "target": "es2022",
    "moduleResolution": "nodenext",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "verbatimModuleSyntax": false, 
    "isolatedModules": true, 

    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}