// tsconfig.scripts.json
{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs", 
    "moduleResolution": "node",
    "outDir": "./dist-scripts",
    "rootDir": "./scripts", 
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"] 
  },
  "include": ["scripts/**/*", "scripts/types.d.ts"]
}
