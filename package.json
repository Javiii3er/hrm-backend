{
  "name": "hrm-backend",
  "version": "1.0.0",
  "description": "API backend para el Sistema HRM",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "db:push": "npx prisma db push",
  "db:seed": "tsx --tsconfig tsconfig.scripts.json scripts/seed.ts",
    "db:reset": "npm run db:push && npm run db:seed",
  "test:api": "tsx --tsconfig tsconfig.scripts.json scripts/test-api.ts",
    "test:all": "npm run test:api",
    "docs:generate-types": "ts-node --files --project tsconfig.scripts.json scripts/generate-types-quick.ts",
    "docs:validate-openapi": "ts-node --project tsconfig.scripts.json scripts/validate-openapi.cts"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "prisma",
    "hrm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@redocly/cli": "^2.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.22",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^15.0.4",
    "prisma": "^6.17.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
